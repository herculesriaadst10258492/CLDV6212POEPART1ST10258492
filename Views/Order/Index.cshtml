@model IEnumerable<ABCRetail.Models.Order>
@{
    ViewData["Title"] = "Orders";
}
<h2 class="mb-3">Orders</h2>
<p><a asp-action="Create" class="btn btn-primary">Create Order</a></p>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Customer</th>
            <th>Product</th>
            <th>Qty</th>
            <th>Status</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.OrderDate</td>
                <td>@o.CustomerName</td>
                <td>@o.ProductName</td>
                <td>@o.Quantity</td>
                <td>@o.Status</td>
                <td>@o.TotalAmount.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@o.RowKey">Details</a> |
                    <a asp-action="Edit" asp-route-id="@o.RowKey">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@o.RowKey">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
