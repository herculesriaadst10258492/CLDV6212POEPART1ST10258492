@model ABCRetail.Models.Product
@{
    ViewData["Title"] = "Product Details";
    var id = (int)ViewBag.KeyId;
}
<h1>Product Details</h1>

<div class="card p-3">
    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="image" style="height:120px;width:auto;border-radius:6px;" />
    }
    <dl class="row mt-3">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@string.Format("{0:C}", Model.Price)</dd>
    </dl>
</div>

<p class="mt-3">
    <a asp-action="Edit" asp-route-id="@id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>
