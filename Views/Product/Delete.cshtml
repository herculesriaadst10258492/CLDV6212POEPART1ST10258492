@model ABCRetail.Models.Product
@{
    ViewData["Title"] = "Delete Product";
    var id = (int)ViewBag.KeyId;
}
<h1>Delete Product</h1>

<h3 class="text-danger">Are you sure you want to delete this?</h3>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@string.Format("{0:C}", Model.Price)</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" name="id" value="@id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
